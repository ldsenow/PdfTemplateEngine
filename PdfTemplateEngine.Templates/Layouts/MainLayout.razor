@inherits LayoutComponentBase

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            display: flex;
            justify-content: center;
            width: 100%;
            height: 100%;
            background: #cecece;
        }

        body {
            width: 210mm;
            height: 297mm;
            margin: 0;
            padding: 0;
            font-size: 12pt;
            background-color: white;
            color: black;
            font-family: Arial, sans-serif;
            line-height: 1.5;
        }

        @@page {
            size: A4;
        }

        a {
            text-decoration: underline;
            color: #007bff;
        }

        table, img, svg {
            break-inside: avoid;
        }

        .page {
            padding: 1cm;
        }

        .page-break-before {
            page-break-before: always;
        }

        .page-break-after {
            page-break-after: always;
        }

        .page-break-avoid-inside {
            page-break-inside: avoid;
        }
    </style>
    <style>
        .t-right {
            text-align: right;
        }
    </style>
</head>

<body class="page">
    @Body
</body>

</html>
